<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_startService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스 시작"/>
    <Button
        android:id="@+id/btn_stopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스 중지"/>
<Button
        android:id="@+id/btn_startIntentService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인텐트 서비스 시작"/>
    <Button
        android:id="@+id/btn_stopIntentService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인텐트 서비스 중지"/>
    <Button
        android:id="@+id/btn_startForeGroundService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="짭 포그라운드 서비스 시작"/>
    <Button
        android:id="@+id/btn_startForeGroundService2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="찐 포그라운드 서비스 시작"/>
    <Button
        android:id="@+id/btn_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카운트 출력"/>
</LinearLayout>